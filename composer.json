{
    "name": "ulrack/migration-extension",
    "description": "The migration extension for Ulrack.",
    "keywords": [
        "services",
        "migrations"
    ],
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "grizz-it/command": "^1.0",
        "grizz-it/configuration": "^1.3",
        "grizz-it/services": "^1.0",
        "grizz-it/storage": "^1.1",
        "ulrack/persistent-extension": "^1.2"
    },
    "authors": [
        {
            "name": "Ulrack",
            "homepage": "https://www.ulrack.com/",
            "role": "Developer"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ulrack\\MigrationExtension\\": "src/"
        },
        "files": [
            "locator.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ulrack\\MigrationExtension\\Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [
            "/tests",
            "/.gitignore",
            "/.travis.yml",
            "/phpunit.xml",
            "/phpcs.xml",
            "/PULL_REQUEST_TEMPLATE.md",
            "/CODE_OF_CONDUCT.md",
            "/CONTRIBUTING.md"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    }
}
